@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Karakoç İnşaat Personel | Kayıt</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="/img/svg/logo.svg" type="image/x-icon">
    <!-- Custom styles -->
    <link rel="stylesheet" href="/css/style.min.css">
</head>

<body>
    



    <div class="layer"></div>
    <main class="page-center">
        <article class="sign-up">
            <h1 class="sign-up__title">Karakoç İnşaat</h1>
            <p class="sign-up__subtitle">Çalışan Kayıt Sistemi</p>
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="sign-up__subtitle">
                    @ViewBag.SuccessMessage
                </div>
            }
            @if (ViewBag.Info != null)
            {
                <div style="color:red" class="sign-up__subtitle">
                    @ViewBag.Info
                </div>
            }
            <form class="sign-up-form form" action="/Login/Register" method="post">
                <label class="form-label-wrapper">
                    <p class="form-label">TC. KİMLİK:</p>
                    <input class="form-input" name="RTC" type="number" placeholder="TC Kimlik" required>
                </label>
                <label class="form-label-wrapper">
                    <p class="form-label">İsim:</p>
                    <input class="form-input" name="Rusername" type="text" placeholder="İsim" required>
                </label>
                <label class="form-label-wrapper">
                    <p class="form-label">Soyad:</p>
                    <input class="form-input" name="Rlastname" type="text" placeholder="Soyisim" required>
                </label>
                <label class="form-label-wrapper">
                    <p class="form-label">Email:</p>
                    <input class="form-input" name="Remail" type="email" placeholder="Mail Adresi" required>
                </label>

                
                <label class="form-label-wrapper">
                    <p class="form-label">Doğum Tarihiniz:</p>
                    <input class="form-input" name="RBirth" type="date" placeholder="Doğum Tarihi" required>
                </label>
                <label class="form-label-wrapper">
                    <p class="form-label">Password:</p>
                    <input class="form-input" name="Rpassword" type="password" placeholder="Enter your password" required>
                </label>
                <br />
                <a href="~/Login/Giris" style="color:blue"> Giriş Yap </a>
                <br /> <br />

                <button type="submit" class="form-btn primary-default-btn transparent-btn">Sign in</button>
            </form>
        </article>
    </main>
    <!-- Chart library -->
    <script src="/plugins/chart.min.js"></script>
    <!-- Icons library -->
    <script src="/plugins/feather.min.js"></script>
    <!-- Custom scripts -->
    <script src="/js/script.js"></script>
</body>

</html>