
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Karakoç İnşaat | Giriş</title>
    <!-- Favicon -->
    <link rel="icon" href="https://www.flaticon.com/free-icons/worker" type="image/png" title="Worker icons created by Freepik - Flaticon">
    <!-- Custom styles -->
    <link rel="stylesheet" href="/css/style.min.css">
</head>

<body>
    <div class="layer"></div>
    <main class="page-center">
        <article class="sign-up">
            <h1 class="sign-up__title">Karakoç İnşaat</h1>
            <p class="sign-up__subtitle">Giriş için Bilgilerinizi Giriniz</p>
            @if (ViewBag.ErrorMessage != null)
            {
                <p style="color:red" class="sign-up__subtitle">
                    @ViewBag.ErrorMessage
                </p>
            }

            <form class="sign-up-form form" action="/Login/Login" method="post">
                <label class="form-label-wrapper">
                    <p class="form-label">Email</p>
                    <input class="form-input" name="username" type="Email" placeholder="Enter your email" required>
                </label>
                <label class="form-label-wrapper">
                    <p class="form-label">Password</p>
                    <input class="form-input" name="password" type="password" placeholder="Enter your password" required>
                </label>
                <a class="link-info forget-link" href="#">Şifremi Unuttum?</a> <br />
                <a class="link-info forget-link" href="~/Login/KayıtOl">KAYIT OL</a>
                
                <button type="submit" class="form-btn primary-default-btn transparent-btn">Sign in</button>
            </form>
        </article>
    </main>
    <!-- Chart library -->
    <script src="/plugins/chart.min.js"></script>
    <!-- Icons library -->
    <script src="/plugins/feather.min.js"></script>
    <!-- Custom scripts -->
    <script src="/js/script.js"></script>
</body>

</html>