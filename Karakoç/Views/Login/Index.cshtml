@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<title>Login</title>
	<link rel="stylesheet" type="text/css" href="/css/Login.css">
	<link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
</head>
<body>
	<div class="main">
		<input type="checkbox" id="chk" aria-hidden="true">

		<div class="signup">
			@if (ViewBag.ErrorMessage != null)
			{
				<p style="color: red;">@ViewBag.ErrorMessage</p>
			}

			<form method="post" action="/Login/Register">
				<label for="chk" aria-hidden="true">Kayıt Oll</label>
				<input type="text" name="Rusername" placeholder="User name" required="">
				<input type="text" name="Rlastname" placeholder="last name" required="">
				<input type="email" name="Remail" placeholder="Email" required="">

				<input type="password" name="Rpassword" placeholder="Password" required="">
				<button>Sign up</button>
				<br />
			</form>
		</div>

		<div class="login">
			<form method="post" action="/Login/Login">
				<label for="chk" aria-hidden="true">Giriş Yap</label>
				<input type="text" name="username" placeholder="User name" required="">
				<input type="password" name="password" placeholder="Password" required="">
				<button type="submit">Login</button>
			</form>
		</div>
	</div>
</body>
</html>